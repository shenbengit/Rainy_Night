<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/parallax"
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_marginTop="-300dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@mipmap/iv_share_background"
        app:layout_collapseMode="parallax"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePreviewInEditMode="false">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@android:color/white"/>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.CollapsingToolbarLayout
                        android:id="@+id/collapse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:contentScrim="?attr/colorPrimary"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                        app:titleEnabled="false">

                        <RelativeLayout
                            android:id="@+id/panel_lyt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="200dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/panel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:background="@android:color/white"
                                android:paddingBottom="@dimen/padding_common_v"
                                android:paddingLeft="@dimen/padding_common_h"
                                android:paddingRight="@dimen/padding_common_h"
                                android:paddingTop="@dimen/padding_common_v">

                                <com.flyco.roundview.RoundTextView
                                    android:id="@+id/attention"
                                    style="@style/AppTheme.Label"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="0dp"
                                    android:paddingBottom="8dp"
                                    android:paddingLeft="25dp"
                                    android:paddingRight="25dp"
                                    android:paddingTop="8dp"
                                    android:text="关注"
                                    android:textColor="@android:color/white"
                                    app:rv_backgroundColor="@color/colorPrimary"
                                    app:rv_cornerRadius="@dimen/padding_common_d" />

                                <com.flyco.roundview.RoundTextView
                                    android:id="@+id/leaveword"
                                    style="@style/AppTheme.Label"
                                    android:layout_marginLeft="@dimen/padding_common"
                                    android:layout_marginRight="@dimen/padding_common"
                                    android:layout_marginTop="0dp"
                                    android:layout_toLeftOf="@id/attention"
                                    android:layout_toStartOf="@id/attention"
                                    android:paddingBottom="8dp"
                                    android:paddingLeft="25dp"
                                    android:paddingRight="25dp"
                                    android:paddingTop="8dp"
                                    android:text="留言"
                                    android:textColor="@color/colorPrimary"
                                    app:rv_backgroundColor="@android:color/white"
                                    app:rv_cornerRadius="3dp"
                                    app:rv_strokeColor="@color/colorPrimary"
                                    app:rv_strokeWidth="@dimen/division_line"
                                    app:rv_textPressColor="@android:color/white" />

                                <TextView
                                    android:id="@+id/nickname"
                                    style="@style/AppTheme.Label.Title"
                                    android:layout_below="@id/attention"
                                    android:text="一醉方休" />

                                <LinearLayout
                                    android:id="@+id/relationship"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/nickname"
                                    android:layout_marginTop="@dimen/padding_common">

                                    <TextView
                                        android:id="@+id/relationship_attention"
                                        style="@style/AppTheme.Label"
                                        android:text="关注 84 " />

                                    <TextView
                                        style="@style/AppTheme.Label"
                                        android:layout_marginLeft="@dimen/padding_common_h"
                                        android:layout_marginRight="@dimen/padding_common_h"
                                        android:text="|" />

                                    <TextView
                                        android:id="@+id/relationship_fans"
                                        style="@style/AppTheme.Label"
                                        android:text="粉丝 62" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/signature"
                                    style="@style/AppTheme.Label.Discription"
                                    android:layout_below="@id/relationship"
                                    android:layout_marginTop="@dimen/padding_common"
                                    android:text="这个人很懒，什么也没留下..."
                                    android:textColor="@color/colorTextAssistant" />

                            </RelativeLayout>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/avatar"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginLeft="@dimen/padding_common"
                                android:layout_marginStart="@dimen/padding_common"
                                android:src="@mipmap/iv_head"
                                app:civ_border_color="@android:color/white"
                                app:civ_border_overlay="true"
                                app:civ_border_width="3dp" />

                            <TextView
                                android:id="@+id/visitor"
                                style="@style/AppTheme.Label.Layout"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:background="?attr/selectableItemBackground"
                                android:shadowColor="#aa000000"
                                android:shadowDx="2.5"
                                android:shadowDy="2.5"
                                android:shadowRadius="10"
                                android:text="访客总量 15"
                                android:textColor="@android:color/white" />

                            <View
                                style="@style/AppTheme.Divison"
                                android:layout_alignParentBottom="true" />
                        </RelativeLayout>

                    </android.support.design.widget.CollapsingToolbarLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        android:paddingBottom="0dp"
                        app:layout_scrollFlags="scroll">
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="5dp"
                           android:background="@color/tab_unselect"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="动态"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_common"
                        android:paddingRight="@dimen/padding_common">
                        <TextView style="@style/AppTheme.Label"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:layout_marginTop="30dp"
                            android:layout_height="45dp"
                            android:text="21:44"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/padding_common"
                            android:layout_marginRight="@dimen/padding_common"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <View
                                android:layout_width="@dimen/division_line"
                                android:layout_height="30dp"
                                android:background="#cccccc"/>
                            <com.flyco.roundview.RoundFrameLayout
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:rv_isRadiusHalfHeight="true"
                                app:rv_strokeColor="#cccccc"
                                app:rv_strokeWidth="@dimen/division_line">
                            </com.flyco.roundview.RoundFrameLayout>
                            <View
                                android:layout_width="@dimen/division_line"
                                android:layout_height="match_parent"
                                android:background="#cccccc"/>
                        </LinearLayout>
                        <com.flyco.roundview.RoundLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="@dimen/padding_common_d"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_common"
                            app:rv_strokeColor="#cccccc"
                            app:rv_strokeWidth="@dimen/division_line"
                            app:rv_cornerRadius="@dimen/padding_common_d">
                            <TextView style="@style/AppTheme.Label.Title"
                                android:layout_gravity="center_vertical"
                                android:textColor="@android:color/tertiary_text_dark"
                                android:text="Steffen Norgaard Andersen"/>
                            <TextView style="@style/AppTheme.Label.Discription"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/padding_common_d"
                                android:textColor="@android:color/tertiary_text_dark"
                                android:text="Lorem ipsum dolor sit amet , consecteur adipiscing elit, sed do eiusmod tempor incidi-dunt ut labore et dlore magna aliqua. Ut enim ad minim veniam, sed do eiusmod quis nostrud exrcitation."/>
                        </com.flyco.roundview.RoundLinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_common"
                        android:paddingRight="@dimen/padding_common">
                        <TextView style="@style/AppTheme.Label"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:layout_marginTop="30dp"
                            android:layout_height="45dp"
                            android:text="19:58"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/padding_common"
                            android:layout_marginRight="@dimen/padding_common"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <View
                                android:layout_width="@dimen/division_line"
                                android:layout_height="30dp"
                                android:background="#cccccc"/>
                            <com.flyco.roundview.RoundFrameLayout
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:rv_isRadiusHalfHeight="true"
                                app:rv_strokeColor="#cccccc"
                                app:rv_strokeWidth="@dimen/division_line">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/padding_common"
                                    android:contentDescription="@string/app_name"
                                    android:tint="#cccccc"/>
                            </com.flyco.roundview.RoundFrameLayout>
                            <View
                                android:layout_width="@dimen/division_line"
                                android:layout_height="match_parent"
                                android:background="#cccccc"/>
                        </LinearLayout>
                        <com.flyco.roundview.RoundLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="@dimen/padding_common_d"
                            android:orientation="vertical"
                            app:rv_cornerRadius_TL="@dimen/padding_common_d"
                            app:rv_cornerRadius_TR="@dimen/padding_common_d">
                            <ImageView style="@style/AppTheme.Label.Title"
                                android:layout_width="match_parent"
                                android:layout_gravity="center_vertical"
                                android:textColor="#cccccc"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/app_name"/>
                            <TextView style="@style/AppTheme.Label.Title"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/padding_common_d"
                                android:textColor="@android:color/tertiary_text_dark"
                                android:text="winter farewell"/>
                        </com.flyco.roundview.RoundLinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <android.support.v7.widget.Toolbar
        style="@style/AppTheme.Toolbar"
        android:id="@+id/toolbar"
        android:background="@android:color/transparent"
        android:layout_marginBottom="0dp"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:layout_collapseMode="pin">
        <android.support.v7.widget.ButtonBarLayout
            android:id="@+id/buttonBarLayout"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/toolbar_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="@dimen/padding_common_d"
                android:layout_marginRight="@dimen/padding_common_d"
                android:src="@mipmap/iv_head"
                app:civ_border_width="@dimen/division_line"
                app:civ_border_color="@android:color/white"
                app:civ_border_overlay="true"/>
            <TextView
                android:id="@+id/title"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:text="一醉方休"/>
        </android.support.v7.widget.ButtonBarLayout>
    </android.support.v7.widget.Toolbar>
</FrameLayout>